
@{
    Layout = null;
}
@model Web.Areas.Admin.Models.LoginAdModel
<!DOCTYPE html>

<head>
    <title>Đăng nhập</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- bootstrap-css -->
    <link rel="stylesheet" href="~/Assets/AdminAD/css/bootstrap.min.css"> 
    <!-- //bootstrap-css -->
    <!-- Custom CSS -->
    <link href="~/Assets/AdminAD/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Assets/AdminAD/css/style-responsive.css" rel="stylesheet" />
    <!-- font CSS -->
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- font-awesome icons -->
    <link rel="stylesheet" href="~/Assets/AdminAD/css/font.css" type="text/css" />
    <link href="~/Assets/AdminAD/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <script src="~/Assets/AdminAD/js/jquery2.0.3.min.js"></script>
</head>
<body>
    <div class="log-w3">
        <div class="w3layouts-main">
            <h2>Đăng Nhập</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                @Html.TextBoxFor(model => model.UserName, new { @class = "ggg", @placeholder = "Tên đăng nhập", @required = ""})
                @Html.TextBoxFor(model => model.Password, new { @class = "ggg", @placeholder = "Mật khẩu", @type="password", @required = "" })
                <div class="clearfix"></div>
                <input type="submit" value="Đăng nhập" name="login">
            }
        </div>
    </div>
    <script src="~/Assets/AdminAD/js/bootstrap.js"></script>
    <script src="~/Assets/AdminAD/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Assets/AdminAD/js/scripts.js"></script>
    <script src="~/Assets/AdminAD/js/jquery.slimscroll.js"></script>
    <script src="~/Assets/AdminAD/js/jquery.nicescroll.js"></script>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="js/flot-chart/excanvas.min.js"></script><![endif]-->
    <script src="~/Assets/AdminAD/js/jquery.scrollTo.js"></script>
</body>

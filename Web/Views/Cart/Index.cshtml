@model List<Web.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="/Assets/admin/js/controller/cartController.js"></script>
}
<link href="~/Assets/admin/css/bootstrap-grid.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/Assets/admin/css/bootstrap-grid.min.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/Assets/admin/css/bootstrap-reboot.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/Assets/admin/css/bootstrap-reboot.min.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/Assets/admin/css/bootstrap" rel="stylesheet" type="text/css" media="all" />
<link href="~/Assets/admin/css/bootstrap.min.css" rel="stylesheet" type="text/css" media="all" />
<div class="login">
    <div class="col-lg-12">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã SP</td>
                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Image" width="100" /></td>
                            <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td>@(item.Product.Price.GetValueOrDefault(0).ToString("N0") + " ₫")</td>
                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0") + " ₫")</td>
                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xóa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <button id="btnContiniue" class="button" style="margin-left:700px">Tiếp tục mua hàng</button>
            <button id="btnUpdate" class="button">Cập nhật giỏ hàng</button>
            <button id="btnDeleteAll" class="button">Xóa giỏ hàng</button>
            <button id="btnPayment" class="button">Thanh toán</button>
        }
        else
        {
            <div class="login">
                <div class="wrap">
                    <h4 class="title">Giỏ hàng của bạn hiện tại đang trống</h4>
                    <p class="cart">Hãy bấm<a href="@Url.Action("Index", "Home")"> vào đây</a> để tiếp tục mua hàng</p>
                </div>
            </div>
        }
    </div>
</div>